<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-black"
        android:text="HoÅŸgeldiniz!"
        android:textColor="?attr/colorPrimary"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/iBtn_myProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_header"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:background="?attr/backgroundColor"
        app:srcCompat="@drawable/my_profie_150" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iBtn_myProfile"
        android:layout_alignLeft="@+id/iBtn_myProfile"
        android:textColor="?attr/colorPrimary"
        android:textAlignment="center"
        android:text="Profilim" />

    <ImageButton
        android:id="@+id/iBtn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_header"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:background="?attr/backgroundColor"
        app:srcCompat="@drawable/search_150" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iBtn_search"
        android:layout_alignLeft="@+id/iBtn_search"
        android:textAlignment="center"
        android:textColor="?attr/colorPrimary"
        android:text="Mezun Bul" />

    <ImageButton
        android:id="@+id/iBtn_announcements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iBtn_myProfile"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:background="?attr/backgroundColor"
        app:srcCompat="@drawable/ann_150" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iBtn_announcements"
        android:layout_alignLeft="@+id/iBtn_myProfile"
        android:textColor="?attr/colorPrimary"
        android:textAlignment="center"
        android:text="Duyurular" />

    <ImageButton
        android:id="@+id/iBtn_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iBtn_search"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:background="?attr/backgroundColor"
        app:srcCompat="@drawable/media_150" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iBtn_media"
        android:layout_alignLeft="@+id/iBtn_media"
        android:textColor="?attr/colorPrimary"
        android:textAlignment="center"
        android:text="Medyam" />

</RelativeLayout>