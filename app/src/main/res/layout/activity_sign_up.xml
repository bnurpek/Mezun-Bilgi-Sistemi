<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.SignUp"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-black"
        android:text="Kayıt Ol"
        android:textColor="?attr/colorPrimary"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_below="@+id/tv_header"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/avatar"
        android:background="@color/ytu_gold_tint80"
        android:scaleType="centerCrop"/>

    <ImageButton
        android:id="@+id/ib_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/from_gallery"
        android:background="@color/white"
        android:layout_alignTop="@+id/iv_profile"
        android:layout_alignRight="@+id/iv_profile"
        android:layout_marginRight="-25dp"
        />

    <ImageButton
        android:id="@+id/ib_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/from_camera"
        android:background="@color/white"
        android:layout_alignTop="@+id/iv_profile"
        android:layout_alignRight="@+id/iv_profile"
        android:layout_marginRight="-25dp"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_profile"
        android:layout_marginTop="40dp"
        android:layout_alignLeft="@id/iv_profile"
        android:hint="Ad"
        android:minHeight="48dp"
        android:ems="8" />

    <EditText
        android:id="@+id/et_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_profile"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:hint="Soyad"
        android:minHeight="48dp"
        android:ems="8" />

    <EditText
        android:id="@+id/et_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_name"
        android:layout_marginTop="40dp"
        android:layout_alignLeft="@id/et_name"
        android:minHeight="48dp"
        android:hint="Giriş Tarihi"
        android:ems="8" />

    <EditText
        android:id="@+id/et_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_surname"
        android:layout_alignLeft="@id/et_surname"
        android:layout_marginTop="40dp"
        android:minHeight="48dp"
        android:hint="Mezuniyet Tarihi"
        android:ems="8" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/et_start_date"
        android:layout_alignLeft="@id/et_name"
        android:minHeight="48dp"
        android:inputType="textEmailAddress"
        android:hint="E-posta"
        android:ems="12" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_email"
        android:layout_marginTop="40dp"
        android:layout_alignLeft="@+id/et_name"
        android:minHeight="48dp"
        android:inputType="textPassword"
        android:hint="Şifre"
        android:ems="8" />

    <Button
        android:id="@+id/btn_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_password"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:ems="8"
        android:text="Kayıt Ol" />

</RelativeLayout>